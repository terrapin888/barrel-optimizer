{
  "name": "barrel-optimizer",
  "version": "1.0.0",
  "description": "Zero-Overhead Barrel File Optimizer for better tree-shaking",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "barrel-optimizer": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "optimize": "node dist/cli/index.js optimize",
    "analyze": "node dist/cli/index.js analyze",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ tests/ --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "barrel",
    "tree-shaking",
    "optimizer",
    "imports",
    "bundler",
    "monorepo"
  ],
  "author": "Seungwan Cho <csw7515@naver.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@swc/core": "^1.3.100",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "es-module-lexer": "^1.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "es-toolkit": "^1.42.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
